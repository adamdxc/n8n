{
  "name": "YAML Chat Analyzer",
  "nodes": [
    {
      "parameters": {
        "chatInputUi": true
      },
      "id": "1",
      "name": "Chat Trigger",
      "type": "n8n-nodes-base.chatTrigger",
      "typeVersion": 1,
      "position": [200, 300]
    },
    {
      "parameters": {
        "mode": "complete",
        "model": "gpt-4o-mini",
        "messages": [
          {
            "role": "system",
            "content": "You are an expert Kubernetes YAML analyzer. The user will paste YAML content or ask questions about it. Analyze and explain clearly."
          },
          {
            "role": "user",
            "content": "={{$json[\"message\"]}}"
          }
        ]
      },
      "id": "2",
      "name": "AI (OpenAI Chat)",
      "type": "n8n-nodes-base.openAi",
      "typeVersion": 2,
      "position": [500, 300],
      "credentials": {
        "openAiApi": {
          "id": "REPLACE_WITH_YOUR_OPENAI_CREDENTIAL_ID",
          "name": "OpenAI API"
        }
      }
    },
    {
      "parameters": {
        "text": "={{$json[\"choices\"][0][\"message\"][\"content\"]}}"
      },
      "id": "3",
      "name": "Chat Message",
      "type": "n8n-nodes-base.chatMessage",
      "typeVersion": 1,
      "position": [800, 300]
    }
  ],
  "connections": {
    "Chat Trigger": {
      "main": [
        [
          {
            "node": "AI (OpenAI Chat)",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "AI (OpenAI Chat)": {
      "main": [
        [
          {
            "node": "Chat Message",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}
